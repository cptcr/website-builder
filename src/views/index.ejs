<!-- /src/views/index.ejs -->
<%- include('partials/head') %>
<body>
    <%- include('partials/header') %>

    <main>
        <!-- About Section -->
        <section class="about-section">
            <h2>About Me</h2>
            <p><strong>Name:</strong> Tony</p>
            <p><strong>Age:</strong> 17 years</p>
            <p><strong>Country:</strong> Germany</p>
            <p><strong>Languages:</strong> German, English (B2), Dutch</p>
            <p><strong>Hobbies:</strong> Coding, Gaming, Sleeping, Outdoor Activities</p>
        </section>

        <!-- GitHub Repositories Section -->
        <section>
            <h2>Top GitHub Repositories</h2>
            <div class="repo-grid grid">
                <% topRepos.forEach(repo => { %>
                <div class="repo-card">
                    <h3><%= repo.name %></h3>
                    <p><%= repo.description %></p>
                    <div class="repo-info">
                        <span>
                            <i class="fas fa-star star-icon"></i> <%= repo.stargazers_count %>
                        </span>
                        <span>
                            <i class="fas fa-code-branch"></i> <%= repo.forks_count %>
                        </span>
                        <% if (repo.language) { %>
                        <span>
                            <i class="fas fa-code"></i> <%= repo.language %>
                        </span>
                        <% } %>
                    </div>
                    <a href="<%= repo.html_url %>" target="_blank">View on GitHub</a>
                </div>
                <% }) %>
            </div>
        </section>

        <!-- Tech Stack Section -->
        <section>
            <h2>Tech Stack</h2>
            <div class="tech-grid grid">
                <% techStack.forEach(stack => { %>
                <div class="card">
                    <h3><%= stack.name %></h3>
                    <p><%= stack.description %></p>
                </div>
                <% }) %>
            </div>
        </section>
    </main>

    <%- include('partials/footer') %>
</body>
</html>
